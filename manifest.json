{
  "manifest_version": 2,

  "name": "Metadata, Please",
  "description": "Metadata, Please",
  "version": "1.1",
  "default_locale": "en",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "main.js"
      ],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "128": "assets/icons/icon.png"
  },

  "browser_action": {
    "default_icon": "assets/icons/icon.png",
    "default_title": "Metadata, Please",
    "default_popup": "src/popup/popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
